discordButton.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/hzkzrgyvDF")
    discordButton.Text = "Discord link copied!"
    wait(2)
    discordButton.Text = "Copy Discord Link"
end)

-- Key verification
submitButton.MouseButton1Click:Connect(function()
    if textBox.Text == keyToEnter then
        textBox.Text = "Correct key!"
        textBox.TextColor3 = Color3.fromRGB(0, 255, 0)
        wait(1)
        screenGui:Destroy()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/nguyenhoangmaiscripter/Meme/refs/heads/main/FlandreHub"))()
    else
        textBox.Text = "Incorrect key!"
        textBox.TextColor3 = Color3.fromRGB(255, 0, 0)
        wait(1)
        textBox.Text = ""
        textBox.TextColor3 = Color3.fromRGB(255, 255, 255)
    end
end)
